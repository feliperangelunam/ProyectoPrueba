extends ../../layout.jade
block contenido
	div(class="col-md-6 remove-float center-block big-top-space big-left-space")
		h1 Editar Imagen
		form(action="/app/imagenes/#{imagen.id}?_method=PUT", method="POST")
			div(class="form-group")
				label(for="title") Titulo
				input(type="text", name="title", placeholder="Titulo de la imagen...", id="title", class="form-control", value="#{imagen.title}")
			div(class="row top-space")
				div(clas="col-xs-12 col-sm-6")
					input(type="submit" value="Actualizar" class="btn btn-info")
