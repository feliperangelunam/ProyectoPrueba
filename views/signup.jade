extends ./layout.jade
block contenido
	div(class="col-md-6 remove-float center-block big-top-space big-left-space")
		form(action="/users", method="POST")
			div(class="form-group")
				label(for="email") Email
				input(type="text", name="email", placeholder="Email", id="email", class="form-control")
			div(class="form-group")
				label(for="password") Contraseña
				input(type="password", name="password", placeholder="Contraseña", id="password", class="form-control")
			div(class="form-group")
				label(for="password_confirmation") Confirma tu contraseña
				input(type="password", name="password_confirmation", placeholder="Confirma contraseña", id="password_confirmation", class="form-control")
			div(class="form-group")
				label(for="username") Username
				input(type="text", name="username", placeholder="Nombre de usuario", id="username", class="form-control")
			div(class="row top-space")
				div(clas="col-xs-12 col-sm-6")
					input(type="submit" value="Iniciar sesión" class="btn btn-info")
				div(clas="col-xs-12 col-sm-6 text-right")
					a(href="/login") Ya tengo cuenta